{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/debugdir_nosanitize/emulator",  
        "args": ["roms/smb.nes"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,  
        "MIMode": "gdb",           
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "miDebuggerPath": "/usr/bin/gdb",         
        "miDebuggerArgs": "",
        "sourceFileMap": {
          "/path/to/source/code": "${workspaceFolder}/src"
        },
        "internalConsoleOptions": "openOnSessionStart"
      }
    ]
  }